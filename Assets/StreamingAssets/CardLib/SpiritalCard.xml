    <define_card>
        <name>mysticism</name>
        <title>通灵版</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后，[持续]每一回合开始时，减少1点精神，获得1点外感</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>spirital</category>
        <on_play_card>
            <add_status>
                <name>mysticism</name>
                <value>1</value>
            </add_status>
        </on_play_card>
    </define_card>
    
    
</Common>