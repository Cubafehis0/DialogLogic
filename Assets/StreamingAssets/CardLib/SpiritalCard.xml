    <define_card>
        <name>sensitivity</name>
        <title>感应力</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后精神减少3点，外感增加2点</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>spirital</category>
        <in_hand_modifier>
            <personality_linear>
                <spritial>3</spritial>
