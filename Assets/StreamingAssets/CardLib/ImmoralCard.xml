<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="schema0.xsd" type="application/xml" schematypens="http://www.w3.org/2001/XMLSchema"?>
<Common>
    <define_card>
        <name>debase</name>
        <title>贬低</title>
        <condition_desc>当对方动摇时</condition_desc>
        <effect_desc>选择一个已揭示判定-4</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <requirements>
            <requirement>target.skeptical > 0</requirement>
        </requirements>
        <on_play_card>
            <GUI_select_condition_nerf>
                <value>4</value>
            </GUI_select_condition_nerf>
        </on_play_card>
    </define_card>

    <define_card>
        <name>malicious_question</name>
        <title>恶意质疑</title>
        <condition_desc>有欺骗项，道德大于0</condition_desc>
        <effect_desc>给予2层动摇；锁定威胁选项3回合；无忌+5；强势+5</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <requirements>
            <requirement>cheat_count>0</requirement>
            <requirement>moral>0</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <target>target</target>
                <name>shaken</name>
                <value>2</value>
            </add_status>
            <modify_focus>
                <type>cheat</type>
                <duration>2</duration>
            </modify_focus>
            <modify_personality>
                <personality>
                    <immoral>5</immoral>
                    <aggressive>5</aggressive>
                </personality>
                <duration>-1</duration>
            </modify_personality>
        </on_play_card>
    </define_card>

    <define_card>
        <name>shepherd</name>
        <title>牧羊</title>
        <condition_desc>对方处于信任</condition_desc>
        <effect_desc>持有无忌+6；无忌+5；下一次说服+3；锁定说服3回合；</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <in_hand_modifier>
            <personality_linear>
                <immoral>6</immoral>
            </personality_linear>
        </in_hand_modifier>
        <requirements>
            <requirement>target.trust>0</requirement>
            <requirement>aggressive > target.aggressive</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <name>shepherd</name>
                <value>3</value>
            </add_status>
            <modify_focus>
                <type>persuade</type>
                <duration>3</duration>
            </modify_focus>
            <modify_personality>
                <personality>
                    <immoral>5</immoral>
                </personality>
                <duration>-1</duration>
            </modify_personality>
        </on_play_card>
    </define_card>

    <define_card>
        <name>door_in_the_face</name>
        <title>以退为进</title>
        <condition_desc></condition_desc>
        <effect_desc>动摇1回合；抽牌3</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <on_play_card>
            <add_status>
                <name>shaken</name>
                <value>1</value>
            </add_status>
            <draw>
                <num>3</num>
            </draw>
        </on_play_card>
    </define_card>

    <define_card>
        <name>bad_blood</name>
        <title>恶感</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <on_play_card>
            <add_status>
                <name>shaken</name>
                <value>1</value>
            </add_status>
            <random_dynamic_card>
                <include>hand</include>
                <num>1</num>
                <action>
                    <activate>
                        <permanent>false</permanent>
                    </activate>
                </action>
            </random_dynamic_card>
        </on_play_card>
    </define_card>

    <define_card>
        <name>baseless_denouncement</name>
        <title>无端指责</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <in_hand_modifier>
            <personality_linear>
                <immoral>3</immoral>
            </personality_linear>
        </in_hand_modifier>
        <on_play_card>
            <add_status>
                <target>target</target>
                <name>panic</name>
                <value>1</value>
            </add_status>
        </on_play_card>
    </define_card>

    <define_card>
        <name>brainwash</name>
        <title>洗脑</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <requirements>
            <requirement>target.panic>0</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <target>target</target>
                <name>shaken</name>
                <value>2</value>
            </add_status>
        </on_play_card>
    </define_card>

    <define_card>
        <name>evil_consequence</name>
        <title>恶酿</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <in_hand_modifier>
            <!-- 持有效果未完成-->
        </in_hand_modifier>
    </define_card>

    <define_card>
        <name>word_intro</name>
        <title>话引子</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <in_hand_modifier>
            <personality_linear>
                <immoral>5</immoral>
            </personality_linear>
        </in_hand_modifier>
        <on_play_card>
            <GUI_select_choice>
                <action>
                    <choice_reveal_random>
                        <num>1</num>
                    </choice_reveal_random>
                </action>
            </GUI_select_choice>
        </on_play_card>
    </define_card>

</Common>