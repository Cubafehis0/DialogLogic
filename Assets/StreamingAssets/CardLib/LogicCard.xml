<Common>
    <define_card>
        <name>空</name>
        <title>空</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <category>logic</category>
    </define_card>

    <define_card>
        <name>adjested_ideas</name>
        <title>整理思绪</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后丢弃3张手牌</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <on_play_card>
            <discard_some_hand>
                <num>3</num>
            </discard_some_hand>
        </on_play_card>
    </define_card>

    <define_card>
        <name>attentive</name>
        <title>凝神</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后丢弃2张手牌，获得一层免费</effect_desc>
        <meme>无</meme>
        <cost>1</cost>
        <category>logic</category>
        <on_play_card>
            <discard_some_hand>
                <num>2</num>
            </discard_some_hand>
            <add_status>
                <name>free</name>
                <value>1</value>
            </add_status>
        </on_play_card>
    </define_card>

    <define_card>
        <name>distribution</name>
        <title>周延</title>
        <condition_desc>无</condition_desc>
        <effect_desc>持有时逻辑增加1；打出后从八个倾向中选择一个加2</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <in_hand_modifier>
            <personality_linear>
                <logic>1</logic>
            </personality_linear>
        </in_hand_modifier>
        <on_play_card>
            <GUI_tendency_add>
                <include>Inside</include>
                <include>Outside</include>
                <include>Logic</include>
                <include>Passion</include>
                <include>Moral</include>
                <include>Unethic</include>
                <include>Detour</include>
                <include>Strong</include>
                <value>2</value>
            </GUI_tendency_add>
        </on_play_card>
    </define_card>

    <define_card>
        <name>extension</name>
        <title>外延</title>
        <condition_desc>无</condition_desc>
        <effect_desc>持有时逻辑增加2；打出后逻辑增加4</effect_desc>
        <meme></meme>
        <category>logic</category>
        <in_hand_modifier>
            <personality_linear>
                <logic>2</logic>
            </personality_linear>
        </in_hand_modifier>
        <on_play_card>
            <modify_personality>
                <personality>
                    <logic>4</logic>
                </personality>
                <dmg_type>Magic</dmg_type>
            </modify_personality>
        </on_play_card>
    </define_card>

    <define_card>
        <name>minor_premise</name>
        <title>小前提</title>
        <condition_desc>逻辑大于4</condition_desc>
        <effect_desc>打出后，下一张打出的对策牌的数值效果+1</effect_desc>
        <meme></meme>
        <category>logic</category>
        <requirements>
            <requirement>logic>4</requirement>
        </requirements>
        <on_play_card>
            <!-- 数值+1未完成-->
        </on_play_card>
    </define_card>

    <define_card>
        <name>junior_logics</name>
        <title>逻辑学入门</title>
        <condition_desc>无</condition_desc>
        <effect_desc>持有时逻辑增加5</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <in_hand_modifier>
            <personality_linear>
                <logic>5</logic>
            </personality_linear>
        </in_hand_modifier>
    </define_card>

    <define_card>
        <name>progressive</name>
        <title>递进</title>
        <condition_desc>本回合上一张执行的对策牌是逻辑牌，且逻辑大于3</condition_desc>
        <effect_desc>持有时逻辑增加2；打出后，下一张打出的对策牌的数值效果+1</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <in_hand_modifier>
            <personality_linear>
                <logic>2</logic>
            </personality_linear>
        </in_hand_modifier>
        <requirements>
            <requirement>logic_combo>0</requirement>
            <requirement>logic>3</requirement>
        </requirements>
        <on_play_card>
            <!-- 数值+1未完成 -->
        </on_play_card>
    </define_card>

    <define_card>
        <name>major_premise</name>
        <title>大前提</title>
        <condition_desc>无</condition_desc>
        <effect_desc>下一张打出的对策牌的数值效果+2</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <on_play_card>
            <!-- 数值+2未完成 -->
        </on_play_card>
    </define_card>

    <define_card>
        <name>thoughtful</name>
        <title>周全</title>
        <condition_desc>逻辑大于4</condition_desc>
        <effect_desc>打出后从八个倾向中选择一个增加4</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <on_play_card>
            <GUI_tendency_add>
                <include>Inside</include>
                <include>Outside</include>
                <include>Logic</include>
                <include>Passion</include>
                <include>Moral</include>
                <include>Unethic</include>
                <include>Detour</include>
                <include>Strong</include>
                <value>4</value>
            </GUI_tendency_add>
        </on_play_card>
    </define_card>

    <define_card>
        <name>repeated_proof</name>
        <title>重复举证</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后从卡组中选择1张牌复制后加入手牌中，巧计</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <exhaust>true</exhaust>
        <category>logic</category>
        <on_play_card>
            <GUI_select_dynamic_card>
                <include>all</include>
                <action>
                    <add_copy_to_hand>
                        <num>1</num>
                    </add_copy_to_hand>
                </action>
            </GUI_select_dynamic_card>
        </on_play_card>
    </define_card>

    <define_card>
        <name>infer</name>
        <title>推导</title>
        <condition_desc>逻辑大于2</condition_desc>
        <effect_desc>打出后获得一层免费，巧计</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <exhaust>true</exhaust>
        <category>logic</category>
        <requirements>
            <requirement>logic>2</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <name>free</name>
                <value>1</value>
            </add_status>
        </on_play_card>
    </define_card>

    <define_card>
        <name>query</name>
        <title>质疑</title>
        <condition_desc>逻辑大于3</condition_desc>
        <effect_desc>打出后对方动摇3回合</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <requirements>
            <requirement>logic>3</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <target>target</target>
                <name>shaken</name>
                <value>1</value>
            </add_status>
        </on_play_card>
    </define_card>

    <define_card>
        <name>guide_thought</name>
        <title>引导思考</title>
        <condition_desc>本回合上2张执行的对策牌是逻辑牌</condition_desc>
        <effect_desc>打出后移除锁定对话选项中的理性判定条件</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <requirements>
            <requirement>logic_combo>1</requirement>
            <requirement>focus_count>0</requirement>
        </requirements>
        <on_play_card>
            <current_focus>
                <action>
                    
                </action>
            </current_focus>
            <current_focus>
                <action>
                    <choice_remove_condition>
                        <include>Logic</include>
                    </choice_remove_condition>
                </action>
            </current_focus>
        </on_play_card>
    </define_card>

    <define_card>
        <name>associate</name>
        <title>联想</title>
        <condition_desc>本回合上1张执行的对策牌是逻辑牌</condition_desc>
        <effect_desc>持有时逻辑增加1；打出后逻辑增加5</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        
        <in_hand_modifier>
            <personality_linear>
                <logic>1</logic>
            </personality_linear>
        </in_hand_modifier>
        <requirements>
            <requirement>logic_combo>0</requirement>
        </requirements>
        <on_play_card>
            <modify_personality>
                <personality>
                    <logic>5</logic>
                </personality>
                <dmg_type>Magic</dmg_type>
            </modify_personality>
        </on_play_card>
    </define_card>

    <define_card>
        <name>quick_thinking</name>
        <title>快速思考</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后，接下来3回合内逻辑增加3，巧计</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <exhaust>true</exhaust>
        <category>logic</category>
        <on_play_card>
            <modify_personality>
                <personality>
                    <logic>3</logic>
                </personality>
                <dmg_type>Magic</dmg_type>
            </modify_personality>
        </on_play_card>
    </define_card>


    <define_card>
        <name>singular_proposition</name>
        <title>单称命题</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后在逻辑、道德、迂回中选择一个增加6，巧计</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <exhaust>true</exhaust>
        <category>logic</category>
        <on_play_card>
            <GUI_tendency_add>
                <include>Logic</include>
                <include>Moral</include>
                <include>Detour</include>
                <value>6</value>
            </GUI_tendency_add>
        </on_play_card>
    </define_card>

    <define_card>
        <name>thinking_room</name>
        <title>思考余地</title>
        <condition_desc>本回合上1张执行的对策牌是逻辑牌</condition_desc>
        <effect_desc>打出后获得一层免费</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <requirements>
            <requirement>logic_combo>0</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <name>free</name>
                <value>1</value>
            </add_status>
        </on_play_card>
    </define_card>

    <define_card>
        <name>responce</name>
        <title>应答</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后逻辑增加3，此牌不花费行动点</effect_desc>
        <meme></meme>
        <cost>0</cost>
        <category>logic</category>
        <on_play_card>
            <modify_personality>
                <personality>
                    <logic>3</logic>
                </personality>
                <dmg_type>Magic</dmg_type>
            </modify_personality>
        </on_play_card>
    </define_card>

    <define_card>
        <name>see_through</name>
        <title>看破</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后消耗1点外感，揭示对方的性格补正</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <on_play_card>
            <modify_personality>
                <personality>
                    <outside>-1</outside>
                </personality>
                <dmg_type>Magic</dmg_type>
            </modify_personality>
            <!-- 揭示性格补正未完成-->
        </on_play_card>
    </define_card>

    <define_card>
        <name>conprehend</name>
        <title>领悟</title>
        <condition_desc>无</condition_desc>
        <effect_desc>打出后消耗1点外感，选择一个选项并揭示其所有判定条件</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <on_play_card>
            <modify_personality>
                <personality>
                    <outside>-1</outside>
                </personality>
                <dmg_type>Magic</dmg_type>
            </modify_personality>
            <GUI_select_choice>
                <action>
                    <choice_reveal_all />
                </action>
            </GUI_select_choice>
        </on_play_card>
    </define_card>

    <define_card>
        <name>sound_out</name>
        <title>试探</title>
        <condition_desc>无</condition_desc>
        <effect_desc>选择一个选项并随机揭示其中的1个判定条件</effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>logic</category>
        <on_play_card>
            <GUI_select_choice>
                <action>
                    <choice_reveal_random>
                        <num>1</num>
                    </choice_reveal_random>
                </action>
            </GUI_select_choice>
        </on_play_card>
    </define_card>
