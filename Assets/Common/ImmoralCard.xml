<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="schema0.xsd" type="application/xml" schematypens="http://www.w3.org/2001/XMLSchema"?>
<Common>
    <define_card>
        <name>贬低</name>
        <title>贬低</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <requirements>
            <requirement>target.skeptical > 0</requirement>
        </requirements>
        <on_play_card>
            <GUI_select_condition_nerf>
                <value>4</value>
            </GUI_select_condition_nerf>
        </on_play_card>
    </define_card>

    <define_card>
        <name>恶意质疑</name>
        <title>恶意质疑</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <requirements>
            <requirement>cheat_count>0</requirement>
            <requirement>moral>0</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <target>target</target>
                <name>动摇</name>
                <value>2</value>
            </add_status>
            <modify_focus>
                <type>cheat</type>
                <duration>2</duration>
            </modify_focus>
            <modify_personality>
                <personality>
                    <immoral>5</immoral>
                    <aggressive>5</aggressive>
                </personality>
                <duration>-1</duration>
            </modify_personality>
        </on_play_card>
    </define_card>

    <define_card>
        <name>牧羊</name>
        <title>牧羊</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <in_hand_modifier>
            <personality_linear>
                <immoral>6</immoral>
            </personality_linear>
        </in_hand_modifier>
        <requirements>
            <requirement>target.trust>0</requirement>
            <requirement>aggressive > target.aggressive</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <name>牧羊</name>
                <value>3</value>
            </add_status>
            <modify_focus>
                <type>persuade</type>
                <duration>3</duration>
            </modify_focus>
            <modify_personality>
                <personality>
                    <immoral>5</immoral>
                </personality>
                <duration>-1</duration>
            </modify_personality>
        </on_play_card>
    </define_card>

    <define_card>
        <name>以退为进</name>
        <title>以退为进</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <on_play_card>
            <add_status>
                <name>动摇</name>
                <value>1</value>
            </add_status>
            <draw>
                <num>3</num>
            </draw>
        </on_play_card>
    </define_card>

    <define_card>
        <name>恶感</name>
        <title>恶感</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <on_play_card>
            <add_status>
                <name>动摇</name>
                <value>1</value>
            </add_status>
            <random_dynamic_card>
                <include>hand</include>
                <num>1</num>
                <action>
                    <activate>
                        <permanent>false</permanent>
                    </activate>
                </action>
            </random_dynamic_card>
        </on_play_card>
    </define_card>

    <define_card>
        <name>无端指责</name>
        <title>无端指责</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <in_hand_modifier>
            <personality_linear>
                <immoral>3</immoral>
            </personality_linear>
        </in_hand_modifier>
        <on_play_card>
            <add_status>
                <target>target</target>
                <name>恐慌</name>
                <value>1</value>
            </add_status>
        </on_play_card>
    </define_card>

    <define_card>
        <name>洗脑</name>
        <title>洗脑</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <requirements>
            <requirement>target.恐惧>0</requirement>
        </requirements>
        <on_play_card>
            <add_status>
                <target>target</target>
                <name>动摇</name>
                <value>2</value>
            </add_status>
        </on_play_card>
    </define_card>

    <define_card>
        <name>恶酿</name>
        <title>恶酿</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <in_hand_modifier>
            <!-- 持有效果未完成-->
        </in_hand_modifier>
    </define_card>

    <define_card>
        <name>话引子</name>
        <title>话引子</title>
        <condition_desc></condition_desc>
        <effect_desc></effect_desc>
        <meme></meme>
        <cost>1</cost>
        <category>immoral</category>
        <in_hand_modifier>
            <personality_linear>
                <immoral>5</immoral>
            </personality_linear>
        </in_hand_modifier>
        <on_play_card>
            <GUI_select_choice>
                <action>
                    <choice_reveal_random>
                        <num>1</num>
                    </choice_reveal_random>
                </action>
            </GUI_select_choice>
        </on_play_card>
    </define_card>

</Common>