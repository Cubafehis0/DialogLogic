<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="schema0.xsd" type="application/xml" schematypens="http://www.w3.org/2001/XMLSchema"?>
<Common>

    <define_status>
        <name>免费</name>
        <decrease_on_turn_end>99</decrease_on_turn_end>
        <binding_modifier>
            <cost_modifier>
                <factor>0</factor>
            </cost_modifier>
            <on_play_card>
                <add_status>
                    <name>免费</name>
                    <value>-1</value>
                </add_status>
            </on_play_card>
        </binding_modifier>
    </define_status>

    <define_status>
        <name>动摇</name>
    </define_status>

    <define_status>
        <name>演讲册子</name>
        <binding_modifier>
            <on_turn_start>
                <add_card_to_hand>
                    <name>说教</name>
                    <num>1</num>
                </add_card_to_hand>
            </on_turn_start>
        </binding_modifier>
    </define_status>

    <define_status>
        <name>逼近</name>
        <binding_modifier>
            <on_play_card>
                <potantial>
                    <condition>
                        <requirement>是说教未完成</requirement>
                    </condition>
                    <action>
                        <modify_personality>
                            <personality>
                                <outside>逼近</outside>
                            </personality>
                            <duration>-1</duration>
                        </modify_personality>
                    </action>
                </potantial>
            </on_play_card>
        </binding_modifier>
    </define_status>

    <define_status>
        <name>通灵版</name>
        <binding_modifier>
            <on_turn_start>
                <modify_health>
                    <num>1</num>
                </modify_health>
                <modify_personality>
                    <personality>
                        <outside>1</outside>
                    </personality>
                    <duration>-1</duration>
                </modify_personality>
            </on_turn_start>
        </binding_modifier>
    </define_status>

    <define_status>
        <name>恐慌</name>
    </define_status>
    <define_status>
        <!-- 动摇-->
        <name>skeptical</name>
    </define_status>
    <define_status>
        <!-- 信任-->
        <name>trust</name>
    </define_status>
    <define_status>
        <!-- 每次buff压力减少-->
        <name>恶酿</name>
    </define_status>
</Common>